<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="회원가입"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_register" />


    <EditText
        android:id="@+id/register_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="비밀번호"
        app:layout_constraintStart_toStartOf="@id/register_id"
        app:layout_constraintEnd_toEndOf="@id/register_id"
        app:layout_constraintTop_toBottomOf="@id/register_id" />


    <EditText
        android:id="@+id/register_passwordchk"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="비밀번호 확인"
        app:layout_constraintStart_toStartOf="@id/register_password"
        app:layout_constraintEnd_toEndOf="@id/register_password"
        app:layout_constraintTop_toBottomOf="@id/register_password" />

    <EditText
        android:id="@+id/register_birth"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="생년월일(YYYYMMDD)"
        app:layout_constraintStart_toStartOf="@id/register_passwordchk"
        app:layout_constraintEnd_toEndOf="@id/register_passwordchk"
        app:layout_constraintTop_toBottomOf="@id/register_passwordchk" />

    <EditText
        android:id="@+id/register_num"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="전화번호"
        app:layout_constraintStart_toStartOf="@id/register_birth"
        app:layout_constraintEnd_toEndOf="@id/register_birth"
        app:layout_constraintTop_toBottomOf="@id/register_birth" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="로그인"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@id/register_num"
        app:layout_constraintEnd_toEndOf="@id/register_num"
        app:layout_constraintTop_toBottomOf="@id/register_num" />

</androidx.constraintlayout.widget.ConstraintLayout>